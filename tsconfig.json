{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2017",
      "es6",
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ],
    "allowJs": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "outDir": "./build/",
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "sourceMap": true
  },
  "exclude": [
    "build",
    "**/sample.ts",
    "start.js",
    "docs",
    "scripts",
    "webpack.config.js"
  ]
}